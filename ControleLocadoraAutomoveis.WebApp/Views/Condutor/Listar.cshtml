@model IEnumerable<ListarCondutorViewModel>

@{
	ViewBag.Title = "Listagem de Condutores";
}
						
<div class="col">
	<a class="btn btn-primary px-4 mt-3" asp-controller="Condutor" asp-action="SelecionarCliente">
		<i class="bi bi-circle-add"></i>
		Inserir Condutor
	</a>

	<div class="row gap-2 my-3 my-xl-5">
		@foreach (var condutor in Model)
		{
			<div class="card col-lg-4 col-xl-3 px-0">
				<div class="card-header bg-transparent d-flex justify-content-between align-items-center">
					<h5 class="p-0">@condutor.Id</h5>

					<div class="text-end d-flex align-items-center gap-3">
						<a title="Detalhes"
						   class="text-info-emphasis fs-5"
						   href="/Condutor/Detalhes/@condutor.Id">
							<i class="bi bi-search"></i>
						</a>
						<a title="Excluir"
						   class="text-info-emphasis fs-5" href="/Condutor/Excluir/@condutor.Id">
							<i class="bi bi-trash-fill"></i>
						</a>
					</div>
				</div>

				<div class="card-body">
					<h5 class="card-title">@condutor.Nome</h5>
					<p class="card-text">
						@if (condutor.ClienteCondutor is false)
						{
							<span>Cliente: @condutor.Cliente<br/></span>
						}
						CPF: @condutor.CPF<br/>
						CNH: @condutor.CNH<br/>
						Validade da CNH: @condutor.ValidadeCNH
					</p>
				</div>
			</div>
		}
	</div>
</div>