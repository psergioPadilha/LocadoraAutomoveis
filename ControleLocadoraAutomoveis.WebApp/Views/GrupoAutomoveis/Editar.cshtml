@model EditarGrupoAutomoveisViewModel

@{
	ViewBag.Title = "Editar Grupo de Automoveis";
}

<div class="col">
	<div class="row gap-3 my-3 my-xl-5">
		<form class="col-lg-6 d-grid gap-3 fs-5" asp-controller="GrupoAutomoveis" asp-action="Editar">
			<div>
				<label class="control-label fw-semibold mb-1">Descrição</label>
				<input class="form-control mb-1" asp-for="Descricao"/>
				<span class="text-danger fs-6" asp-validation-for="Descricao"></span>
			</div>
			
			<div class="d-grid gap-2 d-md-block mt-4">
				<button class="btn btn-primary px-5">
					<i class="bi bi-floppy-fill me-1"></i>
					Gravar
				</button>
				
				<a class="btn btn-outline-primary px-5" href="/GrupoAutomoveis/Listar">
					<i class="bi bi-arrow-return-left me-1"></i>
					Voltar
				</a>
			</div>
		</form>
	</div>
</div>