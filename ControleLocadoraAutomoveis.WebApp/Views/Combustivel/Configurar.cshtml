@model FormularioConfiguracaoCombustivelViewModel

@{
	ViewBag.Title = "Configurar Valores de Combustível";
}

<div class="col">
	<div class="row gap-3 my-3 my-xl-5">
		<form class="col-lg-6 d-grid gap-3 fs-5" asp-action="Configurar">
			<div>
				<label class="control-label fw-semibold mb-1">Valor do Álcool</label>
				<input class="form-control mb-1" asp-for="ValorAlcool" type="number" step="0.01" />
				<span class="text-danger fs-6" asp-validation-for="ValorAlcool"></span>
			</div>

			<div>
				<label class="control-label fw-semibold mb-1">Valor do Diesel</label>
				<input class="form-control mb-1" asp-for="ValorDiesel" type="number" step="0.01" />
				<span class="text-danger fs-6" asp-validation-for="ValorDiesel"></span>
			</div>

			<div>
				<label class="control-label fw-semibold mb-1">Valor do Gás</label>
				<input class="form-control mb-1" asp-for="ValorGas" type="number" step="0.01" />
				<span class="text-danger fs-6" asp-validation-for="ValorGas"></span>
			</div>

			<div>
				<label class="control-label fw-semibold mb-1">Valor da Gasolina</label>
				<input class="form-control mb-1" asp-for="ValorGasolina" type="number" step="0.01" />
				<span class="text-danger fs-6" asp-validation-for="ValorGasolina"></span>
			</div>

			<div class="d-grid gap-2 d-md-block mt-4">
				<button class="btn btn-primary px-5">
					<i class="bi bi-floppy-fill me-1"></i>
					Gravar
				</button>

				<a class="btn btn-outline-primary px-5" asp-controller="Home" asp-action="Index">
					<i class="bi bi-arrow-return-left me-1"></i>
					Voltar
				</a>
			</div>
		</form>
	</div>
</div>